{
  "name": "trivia-games-api",
  "version": "1.0.0",
  "description": "Trivia Games API",
  "main": "lib/app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "tap --timeout=60000 \"test/**/*.test.js\"",
    "start": "fastify start -l info lib/app.js",
    "dev": "fastify start -w -l info -P lib/app.js",
    "lint": "semistandard",
    "lint:fix": "semistandard --fix",
    "commit": "cz"
  },
  "type": "module",
  "keywords": [],
  "author": "Fabrizio Lallo",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "tap": {
    "node-arg": [
      "--no-warnings",
      "--experimental-loader",
      "@istanbuljs/esm-loader-hook"
    ],
    "nyc-arg": [
      "--all",
      "--exclude=**/app.js",
      "--exclude=**/prismaClient.js"
    ],
    "branches": "80",
    "lines": "80",
    "functions": "80",
    "statements": "80"
  },
  "dependencies": {
    "@prisma/client": "^3.8.1",
    "desm": "^1.2.0",
    "fastify": "^3.0.0",
    "fastify-autoload": "^3.10.0",
    "fastify-cli": "^2.15.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.2",
    "fluent-schema": "^1.1.0"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.1.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "prisma": "^3.8.1",
    "semistandard": "^16.0.1",
    "tap": "^15.1.6"
  }
}
